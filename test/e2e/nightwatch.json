{
  "src_folders": [
    "test/e2e/specs"
  ],
  "output_folder": "test/e2e/reports",
  "webdriver": {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },
  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "chrome"
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": false,
        "path": "./screenshots"
      }
    }
  }
}